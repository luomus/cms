{
  "settings": {
    "number_of_shards": 3,
    "index.mapping.ignore_malformed": true,
    "index.mapping.total_fields.limit": 10000,
    "index.mapping.nested_objects.limit": 100000
  },
  "mappings": {
    "properties": {
      "@context": {
        "type": "keyword"
      },
      "id": {
        "type": "keyword"
      },
      "@type": {
        "type": "keyword"
      },
      "permitEndDate": {
        "type": "date"
      },
      "permitFile": {
        "type": "keyword",
        "ignore_above": 200
      },
      "permitNotes": {
        "type": "keyword",
        "ignore_above": 200
      },
      "permitStartDate": {
        "type": "date"
      },
      "permitStatus": {
        "type": "keyword",
        "ignore_above": 100
      },
      "permitType": {
        "type": "keyword",
        "ignore_above": 100
      },
      "isPartOf": {
        "type": "keyword",
        "ignore_above": 100
      },
      "_meta": {
        "properties": {
          "created": {
            "type": "date"
          },
          "edited": {
            "type": "date"
          }
        }
      }
    }
  }
}